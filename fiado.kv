<CadastroClienteScreen>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        text: "Cadastro de Cliente"
        font_size: 24
        size_hint_y: None
        height: 40

    TextInput:
        id: nome_input
        hint_text: "Nome do cliente"
        multiline: False

    Button:
        text: "Cadastrar"
        size_hint_y: None
        height: 50
        on_press: root.cadastrar()

    Label:
        id: status_label
        text: ""
        color: (0, 1, 0, 1)
